---
permalink: /
eleventyComputed:
  title: "Alex Beuscher - Resume and Portfolio"
  description: "Alex Beuscher - Resume and Portfolio"
---
{% extends "layouts/inc/base.njk" %}
{%- from "macros/debugger/debugger.njk" import debugger -%}
{%- from "macros/job-listing/job-listing.njk" import joblisting -%}

{%- include "layouts/inc/header.njk" -%}
{% block content %}
  <section class="intro">
    <h2>{{sitedata.overview.intro_header}}</h2>
    <p>{{sitedata.overview.intro}}</p>
  </section>
  <section class="skills">
    <h2>{{sitedata.skills.title}}</h2>
    <div class="skills-grid">
      {%- for section in sitedata.skills.sections -%}
        <div class="skill-tile">
          <h3>{{section.title}}</h4>
          <ul>
            {%- for item in section.items -%}
              <li>{{item}}</li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endfor -%}
    </div>
  </section>
  <section class="case-studies">
    <h2>{{sitedata.casestudies.title}}</h2>
    <div class="case-study-grid">
      {%- for site in sitedata.casestudies.sites -%}
        <div class="case-study">
          <h3>{{site.title}}</h3>
          <h4>{{site.role}}</h4>
          <h5>{{site.tech}}</h5>
          <p>{{site.description}}</p>
        </div>
      {%- endfor -%}
    </div>
  </section>
  <section class="jobs">
    <h2>{{sitedata.resume.title}}</h2>
    {%- for job in sitedata.resume.jobs -%}
      {{joblisting(job)}}
    {%- endfor -%}
  </section>
  <section class="education">
    <h2>{{sitedata.education.title}}</h2>
    {%- for credential in sitedata.education.credentials -%}
      <p>
        <strong>{{credential.school}}</strong> - {{credential.degree}}</p>
    {%- endfor -%}
  </section>
  {{debugger(sitedata)}}
{% endblock %}
{%- include "layouts/inc/footer.njk" -%}