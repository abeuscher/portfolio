permalink: /
eleventyComputed:
  title: "Alex Beuscher - Resume and Portfolio"
  description: "Alex Beuscher - Resume and Portfolio"
---
{% extends "layouts/inc/base.njk" %}
{%- from "macros/debugger/debugger.njk" import debugger -%}
{%- from "macros/job-listing/job-listing.njk" import joblisting -%}
{%- from "macros/skill-tile/skill-tile.njk" import skilltile -%}
{%- from "macros/case-study/case-study.njk" import casestudy -%}

{%- include "layouts/inc/header.njk" -%}
{% block content %}
  <section class="intro">
    <div class="content">
      <p>{{sitedata.overview.intro}}</p>
    </div>
  </section>
  <section class="skills">
    <h2>{{sitedata.skills.title}}</h2>
    <div class="skills-grid content">
      {%- for section in sitedata.skills.sections -%}
        {{skilltile(section)}}
      {%- endfor -%}
    </div>
  </section>
  <section class="case-studies">
    <h2>{{sitedata.casestudies.title}}</h2>
    <div class="case-study-grid content">
      {%- for site in sitedata.casestudies.sites -%}
        {{casestudy(site)}}
      {%- endfor -%}
    </div>
    <div class="modal hide">
      <button class="close-button">&times;</button>
      <div class="swiper">
        <div class="swiper-wrapper">
          {%- for site in sitedata.casestudies.sites -%}
            <div class="swiper-slide">
              <div class="case-study-slide">
                <div class="thumb"><img src="assets/images/{{site.thumbs[0]}}" alt=""/></div>
                <h3>{{site.title}}</h3>

                <p>
                  <strong>Role:</strong>
                  {{site.role}}</p>
                <p>
                  <strong>Tech:</strong>
                  {{site.tech}}</p>
                <p>{{site.description}}</p>
                <p>
                  <a href="{{site.url}}" target="_blank" class="button">visit site*</a>
                </p>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </section>
  <section class="jobs">
    <h2>{{sitedata.resume.title}}</h2>
    <div class="content">
      {%- for job in sitedata.resume.jobs -%}
        {{joblisting(job)}}
      {%- endfor -%}
    </div>
  </section>
  <section class="education">
    <h2>{{sitedata.education.title}}</h2>
    <div class="content">
      {%- for credential in sitedata.education.credentials -%}
        <p>
          <strong>{{credential.school}}</strong> - {{credential.degree}}</p>
      {%- endfor -%}
    </div>
  </section>
{% endblock %}
{%- include "layouts/inc/footer.njk" -%}